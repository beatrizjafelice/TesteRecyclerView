<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    android:layout_margin="5dp"
    android:elevation="50dp"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:background="@color/roxoMedio"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iconeMenuPerfil"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/ic_materias_concluidas"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/txtMenuPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matérias Concluídas"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/iconeMenuPerfil"
            android:paddingStart="11dp"
            android:paddingLeft="11dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>