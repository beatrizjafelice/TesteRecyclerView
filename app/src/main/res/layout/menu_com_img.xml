<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="50dp"
    android:layout_marginBottom="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/white">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/esqCard">

            <ImageView
                android:id="@+id/imgCardBackground"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:layout_alignParentStart="true"
                android:background="@color/roxoEscuro"
                android:src="@drawable/logo_ddu_background" />

            <ImageView
                android:id="@+id/imgCardIcone"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:padding="20dp"
                android:layout_gravity="center"
                android:src="@drawable/logo_desbravadoras_escrita_branca" />

        </FrameLayout>

        <TextView
            android:id="@+id/txtCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/esqCard"
            android:paddingStart="11dp"
            android:paddingLeft="11dp"
            android:paddingTop="10dp"
            android:paddingBottom="4dp"
            android:text="Espaço DDU"
            android:textColor="@color/roxoEscuro"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descricaoCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtCard"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@id/esqCard"
            android:paddingStart="11dp"
            android:paddingLeft="11dp"
            android:paddingRight="5dp"
            android:text="Página destinada a informar sobre os projetos existentes em nosso pais de cunho científico."
            android:textColor="@color/black"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeTextType="uniform" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>